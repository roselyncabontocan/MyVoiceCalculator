<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucuccs.myvoice_calculator.MainActivity" >

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignRight="@+id/btn7"
        android:layout_below="@+id/btn7"
        android:background="@drawable/selector"
        android:onClick="four"
        android:text="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn8"
        android:layout_below="@+id/btn8"
        android:layout_toLeftOf="@+id/btn9"
        android:background="@drawable/selector"
        android:onClick="five"
        android:text="5"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignLeft="@+id/btn9"
        android:layout_toLeftOf="@+id/btnpn"
        android:background="@drawable/selector"
        android:onClick="six"
        android:text="6"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignRight="@+id/btn4"
        android:layout_below="@+id/btn4"
        android:background="@drawable/selector"
        android:onClick="one"
        android:text="1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignLeft="@+id/btn5"
        android:layout_toLeftOf="@+id/btn3"
        android:background="@drawable/selector"
        android:onClick="two"
        android:text="2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn6"
        android:layout_below="@+id/btn6"
        android:layout_toLeftOf="@+id/btnon"
        android:background="@drawable/selector"
        android:onClick="three"
        android:text="3"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignRight="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:background="@drawable/selector"
        android:onClick="dot"
        android:text="."
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn2"
        android:layout_below="@+id/btn2"
        android:layout_toLeftOf="@+id/btn3"
        android:background="@drawable/selector"
        android:onClick="zero"
        android:text="0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn0"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toLeftOf="@+id/btnon"
        android:layout_toRightOf="@+id/btn0"
        android:background="@drawable/selector"
        android:onClick="zero2"
        android:text="00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_toLeftOf="@+id/btnplus"
        android:layout_toRightOf="@+id/btn7"
        android:background="@drawable/selector"
        android:onClick="eight"
        android:text="8"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn6"
        android:layout_toLeftOf="@+id/btnminus"
        android:layout_toRightOf="@+id/btn8"
        android:background="@drawable/selector"
        android:onClick="nine"
        android:text="9"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnpn"
        android:layout_alignLeft="@+id/btnminus"
        android:layout_alignRight="@+id/btnminus"
        android:layout_below="@+id/btnplus"
        android:background="@drawable/btn_black"
        android:onClick="clear"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="9dip"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnpn"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignLeft="@+id/btnc"
        android:layout_alignRight="@+id/btnc"
        android:layout_alignTop="@+id/btn6"
        android:background="@drawable/btn_black"
        android:onClick="posneg"
        android:text="+-"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnc"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_black"
        android:onClick="minus"
        android:text="-"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn6"
        android:background="@drawable/btn_mic"
        android:onClick="on" />

    <Button
        android:id="@+id/btnoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnon"
        android:layout_alignLeft="@+id/btnon"
        android:layout_alignTop="@+id/btnon"
        android:background="@drawable/btn_mic2"
        android:onClick="off" />

    <Button
        android:id="@+id/btnmulti"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndivide"
        android:layout_alignBottom="@+id/btndivide"
        android:layout_toRightOf="@+id/btndivide"
        android:background="@drawable/btn_black"
        android:onClick="multi"
        android:text="*"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editnum1"
        android:layout_below="@+id/editnum1"
        android:background="@drawable/btn_black"
        android:onClick="divide"
        android:text="/"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_toLeftOf="@+id/btnminus"
        android:background="@drawable/btn_black"
        android:onClick="plus"
        android:text="+"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btndivide"
        android:layout_below="@+id/btnmulti"
        android:layout_toLeftOf="@+id/btnmulti"
        android:background="@drawable/selector"
        android:onClick="seven"
        android:text="7"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/btndot"
        android:layout_alignRight="@+id/btnon"
        android:layout_below="@+id/btnon"
        android:background="@drawable/btn_equal"
        android:onClick="equals"
        android:text="="
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editnum3"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnequal"
        android:layout_below="@+id/btnequal"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
         android:visibility="gone"
        android:ems="10" />

    <EditText
        android:id="@+id/editnum2"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editnum4"
        android:layout_toRightOf="@+id/btn00"
        android:ems="10"
        android:visibility="gone"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editnum4"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editnum3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btndot"
        android:ems="10"
         android:visibility="gone"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editnum1"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnminus"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:gravity="right"
        android:textColor="#ffffff"
        android:textSize="25dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editnum5"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editnum1"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="right"
        android:textColor="#ffffff"
        android:textSize="25dp" />

</RelativeLayout>